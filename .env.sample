# .env
# Konfigurasi environment untuk aplikasi JIBAS dan MariaDB

# Konfigurasi Database (digunakan oleh docker-compose.yml untuk MariaDB)
DB_HOST=127.0.0.1 # Host untuk koneksi dari PHP di host machine
DB_PORT=3306      # Port di host yang akan dipetakan ke port 3306 MariaDB di Docker
DB_DATABASE=jibasdb
DB_USERNAME=jibasuser
DB_PASSWORD=jibaspassword
DB_ROOT_PASSWORD=supersecretrootpassword

# Konfigurasi Aplikasi PHP (PHP di host akan membaca ini, atau dari file config PHP terpisah)
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:80 # Sesuaikan dengan port Nginx Anda di host

# Port untuk Nginx di host machine (jika ingin dijadikan variabel)
NGINX_HOST_PORT=80

# Path lain jika dibutuhkan oleh aplikasi Anda
# JIBAS_STORAGE_PATH=/var/www/jibas/storage
